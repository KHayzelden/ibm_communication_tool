<% include partials/navbar.ejs %>
    <div class="wrapper">
        <div class="main-panel">
            <p id="hiddendb" style="display:none"></p>
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg " color-on-scroll="500">
                <div class=" container-fluid  ">
                    <a class="navbar-brand"> Bookmarks </a>
                    <button href="" class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                    </button>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="mdui-tab" id = "bookmarkTab" mdui-tab>
                    <a href="#example1-tab1" class="mdui-ripple">Keywords</a>
                    <a href="#example1-tab2" class="mdui-ripple">Searches</a>
            </div>

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6" id="searchBookmarks">
                        <div id="example1-tab1" class="mdui-p-a-2">
                            <div class="card  card-tasks">
                                <div class="card-header ">
                                    <h4 class="card-title">Keywords</h4>
                                    <p class="card-category">Bookmark keywords for quick searching.</p>
                                </div>
                                <div class="card-body">
                                        <div style="margin-bottom:15px;">
                                            <button type="button" id = "addbutton" class="btn btn-info btn-fill">Add</button>
                                            <button type="button" id = "editbutton" class="btn btn-info btn-fill" >Edit</button>
                                            <button type="button" id = "deleteButton" style = "display:none" class="btn btn-danger btn-fill" >Delete</button>
                                          <!--  <button type="button" id = "saveButton" style = "display:none" class="btn btn-success btn-fill " >Save Changes</button> -->
                                            <p class="card-category" id="editCaption" style = "display:none"><br>Click the search to update</p>
                                        </div>

                                        <div class="pre-scrollable" style="min-width: 100%; height: 100%;">
                                          <div id="list-searches" class="list-group">
                        
                                          </div>
                                        </div>
                                  </div>
                            </div>
                        </div>
                        </div>
                        <div class="col-md-6" id="sentenceBookmarks">
                        <div id="example1-tab2" class="mdui-p-a-2">
                            <div class="card  card-tasks">
                                <div class="card-header ">
                                    <h4 class="card-title">Sentences</h4>
                                    <p class="card-category">Bookmark sentences for quick voicing.</p>
                                </div>
                                <div class="card-body">
                                        <div style="margin-bottom:15px;">
                                            <button type="button" id = "addbutton1" class="btn btn-info btn-fill">Add</button>
                                            <button type="button" id = "editbutton1" class="btn btn-info btn-fill" >Edit</button>
                                            <button type="button" id = "deleteButton1" style = "display:none" class="btn btn-danger btn-fill " >Delete</button>
                                            <button type="button" id = "saveButton1" style = "display:none" class="btn btn-success btn-fill " >Save Changes</button>
                                            <p class="card-category" id="editCaption1" style = "display:none"><br>Click the sentence to update</p>
                                        </div>

                                        <div class="pre-scrollable" style="min-width: 100%; height: 100%;">
                                          <div id="list-sentences" class="list-group">
                                     
                                          </div>
                                        </div>
                                  </div>
                            </div>
                        </div>
                        </div>


                    </div>
                </div>
            </div>



            <!-- Add Sentence Popup -->
                    <div class="modal fade modal-mini modal-primary" id="addSentence" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header justify-content-center">
                                    <div class="modal-profile">
                                        <i class="nc-icon nc-quote"></i>
                                    </div>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="form-group">
                                            <label >New sentence to bookmark:</label>
                                            <input type="text" class="form-control"   id = "inputsentence" placeholder="...">
                                        </div>
                                    </form>
                                    <a style="color: red; visibility:hidden" id = "warninginput1" >Cannot be empty input!</a>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-link btn-simple" data-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-link btn-simple" id = "savebookmark1">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
            <!--  End Modal -->

            <!-- Add Search Popup -->
                    <div class="modal fade modal-mini modal-primary" id="addSearch" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header justify-content-center">
                                    <div class="modal-profile">
                                        <i class="nc-icon nc-zoom-split"></i>
                                    </div>
                                </div>
                                <div class="modal-body">
                                    <form>
                                        <div class="form-group">
                                            <label >New search term to bookmark:</label>
                                            <input type="text" class="form-control" id = "inputsearch" placeholder="...">
                                        </div>
                                        <a style="color: red; visibility:hidden" id = "warninginput2" >Cannot be empty input!</a>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-link btn-simple" data-dismiss="modal">Cancel</button>
                                    <button type="button" class="btn btn-link btn-simple" id = "savebookmark2">Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
            <!--  End Modal -->

        </div>
    </div>

<script>
    var name = '<%=currentUser.email%>'.replace('@','');
    var dbName = name.replace(/\./,'');
    console.log(dbName)
    document.getElementById("hiddendb").innerHTML=dbName;
</script>
